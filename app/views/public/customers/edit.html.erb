<div class="row">
    
    <!--カテゴリ-->
    <div class="col-3 ml-1">
        <%= render 'public/submissions/category' %>
    </div>
    
    
    <div class="col-8">
        
        <div class="my-3">
            <h3 class="pb-3 text-secondary"><strong>プロフィール編集</strong></h3>
        <div>

        <div class="px-5">
            <%= form_with model: @customer, url: update_customer_path(@customer.id), method: :patch do |f| %>
            <div>
                <div class="mb-3">
                    プロフィール画像<br>
                    <%= f.file_field :profile_image, accept: "image/*" %>
                </div>
                
                <div class="mb-3">
                     名前<br>
                    <%= f.text_field :name %>
                </div>
                
                <div class="mb-3">
                    メールアドレス<br>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>
                
                <div class="mb-3">
                    パスワード<br>
                    <%= f.password_field :password, autocomplete: "current-password" %>
                </div>
                
                <div class="px-5">
                    <%= f.submit "変更" %>
                </div>
            </div>
            <% end %>
        </div>
        
    </div>
</div>