<div class="container">
    
    <div class="col-12">
        
        
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <div class="mt-3">
                      <h3 class="text-secondary"><strong>マイページ</strong></h3>
                    </div>
        
                    <p class="text-center"><%= image_tag @customer.get_profile_image(200,200) %></p>
                
                    <div class="my-auto">
                      <table class="table text-center border">
                        <tbody>
                          <tr>
                            <th class="border-right">NAME</th>
                            <th><%= @customer.name %></th>
                          </tr>
                          
                          <tr>
                            <th class="border-right">MAIL</th>
                            <th><%= @customer.email %></th>
                          </tr>
                          
                        </tbody>
                      </table>
                      <div>
                          <p class="text-center">
                            <%= link_to edit_customer_path do %>
                              <button type="button" class="btn btn-secondary">プロフィール編集</button>
                            <% end %>
                            <%= link_to unsubscribe_customer_path do %>
                              <button type="button" class="btn btn-secondary">退会する</button>
                            <% end %>
                            </p>
                      </div>
                    </div>
                </div>
                
                
                <div class="col-8">
                  
                    <div class="mt-3">
                      <h3 class="text-secondary"><strong>投稿履歴</strong></h3>
                    </div>
                    
                    <div class="container py-3 mx-5">
                      <%= render 'public/submissions/list', submissions: @submissions %>
                    </div>
                    
                </div>

        </div>
        </div>
    
    
    </div>
</div>

        
        
