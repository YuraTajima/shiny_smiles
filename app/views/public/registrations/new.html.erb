<div class="row">
  <div class="container">
    
        <div class="my-3">
            <h3 class="pb-3 text-secondary">新規登録</h3>
        <div>

    <div class="text-center">
        <div class="px-5">
          <%= form_with model: @customer, url: customer_registration_path do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          <div>
            <div class="mb-3">
              <%= f.label "ニックネーム" %><br />
              <%= f.text_field :name %>
            </div>
            
            <div class="mb-3">
              <%= f.label "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          
            <div class="mb-3">
              <%= f.label "パスワード(6文字以上)" %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          
            <div class="mb-3">
              <%= f.label "パスワード(確認)" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          
            <div class="mb-3">
              <%= f.submit "新規登録" %>
            </div>
            
            <div>
              ログインは<strong><%= link_to "こちら", "/customers/sign_in" %></strong>から
            </div>
          </div>
          <% end %>
        </div>
    </div>
    
  </div>
</div>