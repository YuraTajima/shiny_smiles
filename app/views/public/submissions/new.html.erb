<div class="row">
    
    <!--カテゴリ-->
    <div class="col-3">
        <%= render 'category' %>
    </div>
    
    
    <div class="col-9">
        
        <div class="my-3">
            <h3 class="pb-3 text-secondary">投稿</h3>
        <div>

        <div class="px-5">
            <%= form_with model: @submission, url: create_submission_path do |f| %>
            <div>
                <div class="mb-3">
                    <p>
                        画像 <br> <%= f.file_field :image, accept: "image/*" %>
                    </p>
                </div>
                
                <div class="mb-3">
                    <p>
                        商品名 <br> <%= f.text_field :name %>
                    </p>
                </div>
                
                <div class="mb-3">
                    <p>
                        ジャンル <br> <%= f.select :genre_id, [['歯ブラシ',1], ['歯磨き粉',2], ['補助的清掃用具',3], ['洗口液',4], ['ホワイトニング用品',5], ['口臭ケア用品',6]] %>
                    </p>
                </div>
                
                <div class="mb-3">
                    <p>
                        値段 <br> <%= f.text_field :price %>円
                    </p>
                </div>
                
                <div class="mb-3">
                    <p>
                        説明 <br> <%= f.text_area :introduction %>
                    </p>
                </div>
                
                <div class="px-5">
                    <%= f.submit '投稿する' %>
                </div>
            </div>
            <% end %>
        </div>
    </div>

</div>