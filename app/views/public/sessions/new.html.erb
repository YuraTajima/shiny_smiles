<div class="row">
  <div class="container">
    
      <div class="my-3">
          <h3 class="pb-3 text-secondary">ログイン</h3>
      <div>
          

      <div class="text-center">
          <div class="px-5">
            <%= form_with model: @customer, url: customer_session_path do |f| %>
            <div>
              <div class="mb-3">
                <%= f.label "メールアドレス" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
              
              <div class="mb-3">
                <%= f.label "パスワード" %><br />
                <%= f.password_field :password, autocomplete: "current-password" %>
              </div>
              
              <div class="mb-3">
                <%= f.submit "ログイン" %>
              </div>
              
              <div>
                新規登録は<strong><%= link_to "こちら", "/customers/sign_up" %></strong>から
              </div>
            </div>
            <% end %>
          </div>
      </div>
    
  </div>
</div>
