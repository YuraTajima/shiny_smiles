<div class="container">
   
    <div class="col-12">
      
        <div class="row">
          <div class="mt-3">
            <h3 class="text-secondary"><strong>会員一覧</strong></h3>
          </div>
          
        <div class="container pb-3 mx-5">
            <table class="table">
                <thead>
                    <tr>
                        <th>会員ID</th>
                        <th>氏名</th>
                        <th>アドレス</th>
                        <th>ステータス</th>
                    </tr>
                </thead>
                
                <tbody>
                    <% @customers.each do |customer| %>
                    <tr>
                        <th><%= customer.id %></th>
                        <th>
                            <%= link_to admin_customer_path(customer.id) do %>
                            <%= customer.name %>
                            <% end %>
                        </th>
                        <th><%= customer.email %></th>
                        <th>
                            <% if customer.is_deleted %>
                                退会
                            <% else %>
                                有効
                            <% end %>
                        </th>
                    </tr>
                    <% end %>
                </tbody>
            </table>
          
        </div>

    </div>
    
</div>
