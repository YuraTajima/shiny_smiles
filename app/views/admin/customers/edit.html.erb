<div class="container">
   
    <div class="col-12">
      
        <div class="mt-3">
            <h3 class="text-secondary"><strong>会員編集</strong></h3>
        </div>
          
        <div class="row">
          
          <div class="container text-center">
              <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
              <div>
                  <div class="mb-3">
                      プロフィール画像<br>
                      <%= f.file_field :profile_image, accept: "image/*" %>
                  </div>
                  
                  <div class="mb-3">
                       名前<br>
                      <%= f.text_field :name %>
                  </div>
                  
                  <div class="mb-3">
                      アドレス<br>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                  </div>
                  
                  
                  <div class="mb-3">
                      ステータス<br>
                      <%= f.radio_button :is_deleted, "false" %>
                      <%= f.label :is_deleted, "有効" %>
                  
                      <%= f.radio_button :is_deleted, "true" %>
                      <%= f.label :is_deleted, "退会" %>
                  </div>
                  
                  <div class="px-5 mb-5">
                      <%= f.submit "変更" %>
                  </div>
              </div>
              <% end %>
          </div>
          
        </div>
          
    </div>
    
</div>
