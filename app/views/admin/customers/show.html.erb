<div class="container">
   
    <div class="col-12">
      
        <div class="row">
          <div class="mt-3">
            <h3 class="text-secondary"><strong>会員詳細</strong></h3>
          </div>
          
        <div class="container pb-3 mx-5">
            <div class="row">
                <div class="col-4 text-center">
                    <p class=""><%= image_tag @customer.get_profile_image(200,200) %></p>
                    
                    <table class="table text-center border">
                        <tbody>
                            <tr>
                                <td class="border-right">会員ID</td>
                                <td><%= @customer.id %></td>
                            </tr>
                            <tr>
                                <td class="border-right">氏名</td>
                                <td><%= @customer.name %></td>
                            </tr>
                            <tr>
                                <td class="border-right">アドレス</td>
                                <td><%= @customer.email %></td>
                            </tr>
                            <tr>
                                <td class="border-right">ステータス</td>
                                <td>
                                    <% if @customer.is_deleted %>
                                        退会
                                    <% else %>
                                        有効
                                    <% end %>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <%= link_to edit_admin_customer_path do %>
                      <button type="button" class="btn btn-secondary">編集</button>
                    <% end %>
                </div>
                
                <div class="col-8 mx-auto mt-3">
                    <div class="mt-3">
                        <h3 class="text-secondary"><strong>投稿一覧</strong></h3>
                    </div>
                    
                    <div class="container py-3 mx-5">
                      <% @submissions.each do |submission| %>
                        <%= link_to admin_submission_path(submission.id) do %>
                        <div class="row border border-dark mb-3 pt-3">
                          <div class="col-4">
                            <p class="">
                              <%= image_tag submission.get_image(150,150) %>
                            </p>
                          </div>
                          
                          <div class="col-8">
                            <p class="h5 text-dark">
                              <strong><%= submission.name %></strong>
                            </p>
                            
                            <p class="text-dark text-right">
                              カテゴリ：
                              <% if submission.genre_id == 1 %>
                                歯ブラシ
                              <% elsif submission.genre_id == 2 %>
                                歯磨き粉
                              <% elsif submission.genre_id == 3 %>
                                補助的清掃用具
                              <% elsif submission.genre_id == 4 %>
                                洗口液
                              <% elsif submission.genre_id == 5 %>
                                ホワイトニング用品
                              <% else submission.genre_id == 6 %>
                                口臭ケア用品
                              <% end %>
                            </p>
                            
                            <p class="text-dark text-right">
                              <%= submission.created_at.strftime('%Y/%m/%d') %>
                            </p>
                            
                          </div>
                        </div>
                        <% end %>
                      <% end %>
                    </div>
                </div>
                
                
            </div>
        </div>

    </div>
    
</div>
