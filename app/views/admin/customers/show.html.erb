<div class="container">
   
    <div class="col-12">
      
        <div class="row">
          <div class="mt-3">
            <h3 class="text-secondary"><strong>会員詳細</strong></h3>
          </div>
          
        <div class="container pb-3 mx-5">
            <div class="row">
                <div class="col-6">
                    <p class=""><%= image_tag @customer.get_profile_image(300,300) %></p>
                </div>
                
                <div class="col-6">
                    <table class="">
                        <tbody>
                            <tr>
                                <td class="text-right">会員ID：</td>
                                <td><%= @customer.id %></td>
                            </tr>
                            <tr>
                                <td class="text-right">氏名：</td>
                                <td><%= @customer.name %></td>
                            </tr>
                            <tr>
                                <td class="text-right">アドレス：</td>
                                <td><%= @customer.email %></td>
                            </tr>
                            <tr>
                                <td class="text-right">ステータス：</td>
                                <td>
                                    <% if @customer.is_deleted %>
                                        退会
                                    <% else %>
                                        会員
                                    <% end %>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                
            </div>
        </div>

    </div>
    
</div>
