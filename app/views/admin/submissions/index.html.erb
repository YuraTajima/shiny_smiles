<div class="container">
   
    <div class="col-12">
      
        <div class="row">
          <div class="mt-3">
            <h3 class="text-secondary"><strong>投稿一覧</strong></h3>
          </div>
          
        <div class="container pb-3 mx-5">
        <% @submissions.each do |submission| %>
          <%= link_to public_submission_path(submission.id) do %>
          <div class="row border border-dark mb-3 pt-3">
            <div class="col-4">
              <p class="">
                <%= image_tag submission.get_image(100,100) %>
              </p>
            </div>
            
            <div class="col-8">
              <p class="h5 text-dark">
                <strong><%= submission.name %></strong>
              </p>
              
              <p class="ml-3 text-dark">
                <strong><%= submission.introduction %></strong>
              </p>
              
              <p>
                <div class="text-dark text-right">
                  <%= image_tag submission.customer.get_profile_image(30,30) %>
                  <%= submission.customer.name %>
                </div>
              </p>
              
            </div>
          </div>
          <% end %>
        <% end %>
        </div>
        
        <div class="mb-3 mx-5">
              <%= paginate @submissions %>
        </div>

    </div>
    
</div>
